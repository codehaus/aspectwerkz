        <attainGoal name="aspectwerkz:attributes:samples"/>
        <exec executable="${bin.dir}/aspectwerkz${executableSuffix}">
            <arg line="-cp ${src.dir}/samples${pathseparator}${dist.dir}/samples.jar -Daspectwerkz.transform.dump=examples examples.logging.Target"/>
        </exec>
    </goal>

