        </exec>
    </goal>

    <!-- =================================================== -->
    <!--  runs the transparent persistence test -->
    <!-- =================================================== -->
    <goal name="aspectwerkz:samples:transparentpersistence">
        <attainGoal name="aspectwerkz:init"/>
